<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.frozenkoi.alertdialogfragment.demo.compat.DemoActivity">

    <Button
        android:id="@+id/button_show_dialog_with_resources"
        android:text="@string/label_dialog_with_resources"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/text_last_action_dialog_with_resources"
        android:text="@string/label_no_last_action"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@id/button_show_dialog_with_resources"
        android:layout_toRightOf="@id/button_show_dialog_with_resources"
        android:layout_toEndOf="@id/button_show_dialog_with_resources"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/button_show_dialog_with_strings"
        android:text="@string/label_dialog_with_strings"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/button_show_dialog_with_resources"
        />

    <TextView
        android:id="@+id/text_last_action_dialog_with_strings"
        android:text="@string/label_no_last_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@id/button_show_dialog_with_strings"
        android:layout_toRightOf="@id/button_show_dialog_with_strings"
        android:layout_toEndOf="@id/button_show_dialog_with_strings"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:id="@+id/button_show_dialog_with_timer"
        android:text="@string/label_dialog_with_timer"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/button_show_dialog_with_strings"
        />

    <TextView
        android:id="@+id/text_last_action_dialog_with_timer"
        android:text="@string/label_no_last_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@id/button_show_dialog_with_timer"
        android:layout_toRightOf="@id/button_show_dialog_with_timer"
        android:layout_toEndOf="@id/button_show_dialog_with_timer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>
